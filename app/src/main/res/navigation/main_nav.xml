<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.insiderser.mars.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/view_image_fullscreen"
            app:destination="@id/imageViewerActivity" />
    </fragment>

    <activity
        android:id="@+id/imageViewerActivity"
        android:name="com.insiderser.mars.imageviewer.ImageViewerActivity"
        tools:layout="@layout/activity_image_viewer">
        <argument
            android:name="imageUrl"
            app:argType="string" />
    </activity>
</navigation>
